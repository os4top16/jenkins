#!groovy
String buildShell = "${env.buildShell}"
pipeline{
  agent{ node{ label 'master' }}
  stages{
    stage("maven build"){
      steps{
        script{
          try {
            mvnHome = tool "M2"
            sh "${mvnHome}/bin/mvn ${buildShell}"
          } catch(e){
            println(e)
          }
        }
      }
    }
    stage("ant build"){
      steps{
        script{
          try{
             antHome = tool "ANT"
             sh "${antHome}/bin/ant ${buildShell}"
          }catch(e){
            println(e)
          }
        }
      }
    }
    stage("GradleBuild"){
      steps{
        script{
          try{
            GradleHome = tool "Gradle"
            sh "${GradleHome}/bin/gradle ${buildShell}"
          }catch(e){
            println(e)
          }
        }
      }
    }
  }

}
